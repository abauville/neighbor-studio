<%= render partial: "shared/navbar" %>

<div class="container">
  <ul class="nav nav-pills ns-nav-pills" id="studioBookingTabs" role="tablist">
    <li class="nav-item " role="presentation">
      <button class="ns-nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab" aria-controls="all aria-selected="true">All</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="ns-nav-link" id="pending-tab" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab" aria-controls="pending" aria-selected="false">Pending</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="ns-nav-link" id="accepted-tab" data-bs-toggle="tab" data-bs-target="#accepted" type="button" role="tab" aria-controls="accepted" aria-selected="false">Accepted</button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="ns-nav-link" id="refused-tab" data-bs-toggle="tab" data-bs-target="#refused" type="button" role="tab" aria-controls="refused" aria-selected="false">Refused</button>
    </li>
  </ul>
  <div class="tab-content" id="studioBookingTabs">
    <div class="tab-pane fade show active" id="all" role="tabpanel" aria-labelledby="all-tab">
      <% @bookings.each do |booking| %>
        <div class="owner-bookings-cards">
          <div class="card-studio-name">
            <h2 class="fw-bold"><%= booking[:studio_name] %></h2>
            <% booking[:studio_bookings].each do |studio_booking| %>
              <%= render partial: "card", locals: {booking: studio_booking } %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="tab-pane fade" id="pending" role="tabpanel" aria-labelledby="pending-tab">
      <% @pending_bookings.each do |booking| %>
        <% if booking[:studio_bookings].any? %>
          <div class="owner-bookings-cards">
            <div class="card-studio-name">
              <h2 class="fw-bold"><%= booking[:studio_name] %></h2>
              <% booking[:studio_bookings].each do |studio_booking| %>
                <%= render partial: "card", locals: {booking: studio_booking } %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="tab-pane fade" id="accepted" role="tabpanel" aria-labelledby="accepted-tab">
      <% @accepted_bookings.each do |booking| %>
        <% if booking[:studio_bookings].any? %>
          <div class="owner-bookings-cards">
            <div class="card-studio-name">
              <h2 class="fw-bold"><%= booking[:studio_name] %></h2>
              <% booking[:studio_bookings].each do |studio_booking| %>
                <%= render partial: "card", locals: {booking: studio_booking } %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="tab-pane fade" id="refused" role="tabpanel" aria-labelledby="refused-tab">
      <% @refused_bookings.each do |booking| %>
        <% if booking[:studio_bookings].any? %>
          <div class="owner-bookings-cards">
            <div class="card-studio-name">
              <h2 class="fw-bold"><%= booking[:studio_name] %></h2>
              <% booking[:studio_bookings].each do |studio_booking| %>
                <%= render partial: "card", locals: {booking: studio_booking } %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
