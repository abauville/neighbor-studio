<%= render partial: "shared/navbar" %>



<div class="container">
  <h1 class="text-capitalize"><%= @studio.name %></h1>
    <div class="row">
        <div class="col-md-6">
          <p>
            <%= @studio.description %>
          </p>
        </div>
        <div class="images--flex">
            <%= cl_image_tag @studio.photo.key, height: 300, width: 400, crop: :fill, class: "img-responsive p-1" %>
          <div class="images--flex__inner">
          </div>
        </div>
        <div class="col-md-6">
        </div>
    </div>
</div>

<div class="container mt-5">
  <h1 class="text-capitalize"><%= @studio.name %></h1>
    <div class="mt-3">
      <p>
        <%= @studio.description %>
      </p>
    </div>
  <div>
  </div>
</div>

<div class="container mt-4">
  <div class="d-flex justify-content-between w-screen">
    <div class="d-flex w-35">
      <div class="studio-booking-form shadow p-5">
        <div>
          <p class="text-label">
            <span class="text-lg text-white"><i class="fas fa-map me-2"></i>Address: </span><%= @studio.address %>
          </p>
          <p id="user-distance" class="text-label">
            <span class="text-lg text-white"><i class="fas fa-map-marked-alt me-2"></i>Distance: </span>N/A
          </p>
          <p class="text-label">
            <span class="text-lg text-white"><i class="fas fa-tag me-2"></i>Price: </span>Â¥<%= @studio.price %>/hr
          </p>
        </div>
        <div>
          <%= render partial: "bookings/form", locals: {booking: Booking.new, studio: @studio} %>
        </div>
      </div>
    </div>
    <div class="d-flex w-60">
      <div
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
        style='width: 100%; height: 500px;'
        class="mb-5">
      </div>
    </div>
  </div>
</div>
